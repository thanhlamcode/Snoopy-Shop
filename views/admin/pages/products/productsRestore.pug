extends ../../layouts/defaults.pug
include ../../mixins/filterButton.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug

block main
  
  .card.mb-3
  .card-header Bộ lọc và Tìm kiếm
  .card-body
    .row 
      .col-6
        +filterButton(button)
      .col-6
        form#form-search
          +Search(keyword)

  .card.mb-3
  .card-header <h1>Danh sách sản phẩm đã xóa<h1>
  .card-body
    form(
      action=path
      method=`POST`
      class=`form-change-multi`
      )
      .d-flex.align-items-start
        .form-group
          input(type=`text`, name=`ids`, value=``, class=`form-control d-none`)
        button(type=`submit`, class=`btn btn-primary`) Khôi phục mục đã chọn

    table(
      class="table table-hover table-sm"
      checkbox-multi
    )
      thead
        tr
          th 
            input(type="checkbox" name="checkall")
          th STT
          th Hình ảnh
          th Tiêu đề
          th Giá
          th Trạng thái
          th Hành động
      tbody
        each item, index in products
          tr
            td
              input(type="checkbox" name="id" value=item.id)
            td #{index+1}
            td
              img(src=item.thumbnail, alt=item.title, width="100px", height="auto")
            td #{item.title}
            td #{item.price}$
            td
              if item.status === "active"
                a(
                href="javascript:" 
                data-status=item.status
                data-id=item.id 
                button-change-status
                class="badge badge-success"
                ) Hoạt động
              else
                a(
                  href="javascript:" 
                  data-status=item.status
                  data-id=item.id 
                  button-change-status
                  class="badge badge-danger"
                ) Dừng hoạt động
            td
              button(class="btn btn-warning btn-sm" id-restore=item.id) Khôi phục sản phẩm

  +pagination(pagination)

  form(
    action="" 
    method="POST"
    id="form-change-status"
    data-path=`${prefitAdmin}/products/change-status`
    ) 
  form(
    action="" 
    method="POST"
    id="form-delete-item"
    data-path=`${prefitAdmin}/products/delete`
  ) 

  form(
    action="" 
    method="POST"
    id="form-restore"
    path=`${prefitAdmin}/products/restore`
    )


  script(src="/admin/js/products.js") 
  script(src="/admin/js/restore.js") 



    