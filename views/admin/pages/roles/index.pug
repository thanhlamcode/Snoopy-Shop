extends ../../layouts/defaults.pug
include ../../mixins/filterButton.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/table-tree.pug

block main
  if(roles.permissions.includes("accounts_view"))
    .card-header <h1>Nhóm quyền<h1>
    +alert-success()  
    .card-body
      .row 
        .col-8 
          h4 Thêm mới Nhóm Quyền:
        .col-4
          a.btn.btn-outline-success(href=`${prefitAdmin}/roles/create`) Thêm mới

    .card
    .card-header Danh sách
    .card-body
      table(
        class="table table-hover table-sm"
        checkbox-multi
      )
        thead
          tr
            th STT
            th Nhóm quyền
            th Mô tả ngắn
            th Hành động
        tbody
          each item, index in records
            tr
              td #{index+1}
              td #{item.title}
              td !{item.description}
              td
                //- a(
                //-   class="btn btn-success btn-sm mr-1"
                //-   href=`${prefitAdmin}/roles/detail/${item.id}`
                //-   ) Chi tiết
                a(
                  class="btn btn-success btn-sm"
                  href=`${prefitAdmin}/roles/edit/${item.id}`
                  ) Sửa
                button(
                  class="btn btn-danger btn-sm ml-1"
                  button-delete
                  id-delete=item.id
                  ) Xóa
          
    //- +pagination(pagination)

    //- form(
    //-   action="" 
    //-   method="POST"
    //-   id="form-change-status"
    //-   data-path=`${prefitAdmin}/products-category/change-status`
    //-   ) 
    form(
      action="" 
      method="POST"
      id="form-delete-item"
      data-path=`${prefitAdmin}/roles/delete`
    ) 


    script(src="/admin/js/products.js") 
  else 
    h1 Bạn không có quyền xem mục này



    