extends ../../layouts/defaults.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
  .container.my-3.otp
    .row
      .col-12.text-center
        img(src=settingGeneral.logo width="200px")
      .col-12
        +box-head("Xác thực mã OTP")
      .col-12 
        p.text-center Nhập mã OTP để tiến hành đặt lại mật khẩu
        form(action="/user/password/otp" method="POST")          
          .form-group
            label(for="email") Email
            input.form-control(type="email" id="email" name="email" required value=email readonly)
          .form-group
            label(for="email") Mã OTP
            input.form-control(type="number" id="otp" name="otp" required  oninput="validateOtp(this)")
          .form-group
            button.btn.btn-primary.btn-block(type="submit") Xác nhận
          