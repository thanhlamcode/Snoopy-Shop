extends ../../layouts/defaults.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug
include ../../mixins/formatTime.pug

block main
  .container.my-5.infoEdit
    .row.justify-content-center
      .col-12.text-center
        //- h1.text-center Thông tin cá nhân
        img(src=settingGeneral.logo width="200px")
      .col-8
        form(action="/user/info/edit" method="POST" enctype="multipart/form-data")
          div(class="form-group" upload-image)
            label(for="thumbnail") Ảnh
            input(type="file" upload-image-input class="form-control-file", id="thumbnail", name="thumbnail" accept="image/*" )
            .wrap-image 
              img(upload-image-preview src=(user.thumbnail ? `${user.thumbnail}` : "/images/user-avatar.jpg") class="upload-preview")

          .form-group
            label(for="fullName") Họ và tên
            input.form-control(type="text" id="fullName" name="fullName" required value=user.fullName )
          
          .form-group
            label(for="email") Email
            input.form-control(type="email" id="email" name="email" required value=user.email )
          
          .form-group
            label(for="phone") Số điện thoại
            input.form-control(type="text" id="phone" name="phone" required value=user.phone )

          .form-group
            label(for="address") Địa chỉ
            input.form-control(type="text" id="address" name="address" required value=user.address )
          
          .form-group
            label(for="password") Mật khẩu (nếu không muốn đổi mật khẩu, vui lòng bỏ qua trường này)
            input.form-control(type="password" id="password" name="password" )
          .form-group
            button.btn.btn-primary.btn-block(type="submit") Cập nhập

  script(src="/admin/js/create.js")
