extends ../../layouts/defaults.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
  .container.my-3.cart
    .row
      .col-12
        +box-head("Thanh Toán")
    .row
      .col-12
        table.table.table-bordered
          thead
            tr
              th STT
              th Ảnh
              th Tên
              th Giá
              th Số lượng
              th Tổng tiền 
          tbody
            each item,index in cart
              tr
                td #{index+1}
                td
                  img(src=item.productInfo.thumbnail, alt=item.productInfo.title width="80px")
                td #{item.productInfo.title}
                td(newPrice=item.newPrice) #{item.newPrice}$
                td #{item.quantity}
                td(totalPrice) #{item.totalPrice}$
        h3(fullPrice).text-right Tổng đơn hàng: #{fullPrice}$

    if(cart.length > 0)
      .row
        .col-12
          .card.p-4.my-4
            form(action="/order/payment" method="POST")
              .form-group
                label(for="fullName") Họ tên
                input(
                  type="text"
                  class="form-control"
                  id="fullName"
                  name="fullName"
                  required
                  value=userInfo.fullName
                )
              .form-group
                label(for="phone") Số điện thoại
                input(
                  type="text"
                  class="form-control"
                  id="phone"
                  name="phone"
                  required
                  value=userInfo.phone
                )
              .form-group
                label(for="address") Địa chỉ
                input(
                  type="text"
                  class="form-control"
                  id="address"
                  name="address"
                  required
                  value=userInfo.address
                )
              .form-group
                button(
                  type="submit"
                  class="btn btn-success btn-block"
                ) ĐẶT HÀNG
        


