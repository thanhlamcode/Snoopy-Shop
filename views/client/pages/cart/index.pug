extends ../../layouts/defaults.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
  .container.my-3
    .row
      .col-12
        +box-head("Giỏ hàng")
    .row
      .col-12
        table.table.table-bordered
          thead
            tr
              th STT
              th Ảnh
              th Tên
              th Giá
              th Số lượng
              th Tổng tiền 
              th Hành động
          tbody
            each item,index in cart
              tr
                td #{index+1}
                td
                  img(src=item.productInfo.thumbnail, alt=item.productInfo.title width="80px")
                td
                  a(href=`/products/detail/${item.productInfo.slug}`) #{item.productInfo.title}
                td #{item.newPrice}$
                td
                  input(
                    type="number"
                    name="quantity"
                    value=item.quantity
                    min="1"
                    item-id=item.product_id
                    style="width: 60px"
                  )
                td #{item.totalPrice}$
                td
                  a(
                    href=`/cart/delete/${item.product_id}`
                    class="btn btn-danger"
                  ) Xóa
        h3.text-right Tổng đơn hàng: #{fullPrice}$
    .text-right.mt-3
      a(href="/checkout" class="btn btn-success") THANH TOÁN
