extends ../../layouts/defaults.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug
include ../../mixins/formatTime.pug

block main
  .container.my-3.success-payment
    .row
      .col-12
        +box-head("Đặt hàng thành công")
    .row 
      .col-12 
        .inner-image
          img(src="https://static.vecteezy.com/system/resources/previews/003/781/092/non_2x/green-tick-checkbox-vector.jpg" alt="tick icon")
        h3 Cảm ơn #{order.userInfo.fullName}!
        h3 Đặt hàng thành công!
        .totalPrice 
          div Vui lòng chuẩn bị số tiền cần thanh toán 
          .price #{order.fullPrice}$
        b Mã đơn hàng: #{order.id}
        p Địa chỉ: <b>#{order.userInfo.address}</b>
        p Số điện thoại: <b>#{order.userInfo.phone}</b>
        +FormatDeliverDate(item)
        table.table.table-bordered.mt-6
          thead
            tr
              th Ảnh
              th Tên sản phẩm
              th Giá
              th Số lượng
              th Tổng tiền 
          tbody
            each item in order.products 
              tr 
                td
                  img(src=item.thumbnail width="80px")
                td
                  .title #{item.title}
                td #{item.price}$
                td #{item.quantity}
                td #{item.totalPrice}$