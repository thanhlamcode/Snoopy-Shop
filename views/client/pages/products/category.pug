extends ../../layouts/defaults.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row
      .col-12
        +box-head(pageTitle)
      .row
        each item in products
          .col-4.mb-3
            .product-item
              .inner-image
                img(src=item.thumbnail, alt=item.title)
                if(item.featured=="1")
                  .inner-featured Nổi bật
              .inner-content
                a(href=`/products/detail/${item.slug}` class="inner-title") #{item.title}
                .inner-price-new #{Math.round(item.price * (100 - item.discountPercentage) / 100)}$
                .inner-price-old #{item.price}$
                .inner-discount #{item.discountPercentage}%

